<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/darkTheme"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivHealthcareImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/banner2" />

    <TextView
        android:id="@+id/tvHealthcareName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Name of Healthcare Facility" />

    <TextView
        android:id="@+id/tvHealthcareDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Description" />

    <Button
        android:id="@+id/buAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/greenButton"
        android:text="Book Appointment"
        android:textSize="24sp" />
</LinearLayout>