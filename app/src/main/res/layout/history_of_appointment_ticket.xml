<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:padding="8pt"
        android:layout_marginBottom="5pt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="4pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProfileImageHist"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHCNameHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9pt"
                    android:text="Name of HC Faculty" />

                <TextView
                    android:id="@+id/tvSpecialityHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:text="Speciality" />
                <TextView
                    android:id="@+id/tvPriceHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:text="Price" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTimingsHist"
                android:layout_marginTop="2pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5pt"
                android:text="Timings: Mon-Sat, 8AM to 5PM" />

            <Button
                android:id="@+id/tvFeedback"
                android:layout_marginTop="2pt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background9"
                android:textColor="@color/dark"
                android:text="Click for Feedback" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>