<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkTheme"
    android:orientation="vertical"
    android:padding="10pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHealthcareImage"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:srcCompat="@drawable/banner2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHealthcareName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor Category"
                android:textColor="@color/greenButton" />

            <TextView
                android:id="@+id/tvHealthcareDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/greenButton" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>